#!/bin/sh
# Create a new executable script.
case $# in
    1)
        path=$1
        name=`nf / $path`
        ext=`nf . $name`
        if [ -e $path ]; then
            echo $path already exists.
            exit 1
        else
            case $ext in
                py)
                    echo '#!/usr/bin/env python' >$path
                    ;;
                *)
                    echo '#!/bin/sh' >$path
            esac
            chmod +x $path
        fi
        ;;
    *)
        name=`nf / $0`
        echo Usage: $name path
esac
