#!/bin/sh
TARGET=1
DOMAIN=org.caseydwyer
case $# in
    1)
        path=$1
        shift 1
        name=`nf / $path`
        # TODO check name for spaces
        android create project \
            --target $TARGET \
            --path $path \
            --package $DOMAIN.`lower $name` \
            --activity $name'Activity' \
            --name $name \
            "$@"
        cd $path
        echo 'local.properties\nbin\ngen' >.gitignore
        git init
        git add .
        git commit -m "Created $name."
        ;;
    *)
        echo Usage: `nf / $0` ProjectName.
        exit 1
esac
